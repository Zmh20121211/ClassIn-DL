<Window x:Class="VideoDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoDownloader"
        xmlns:conv="clr-namespace:VideoDownloader"
        mc:Ignorable="d"
        Title="Classin视频下载工具" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        MinHeight="800" MinWidth="1400">

    <Window.Resources>
        <!-- 颜色转换器 -->
        <conv:DarkenColorConverter x:Key="DarkenConverter" DarkenFactor="0.3"/>
        <conv:DarkenColorConverter x:Key="DarkenConverterPressed" DarkenFactor="0.5"/>

        <!-- 自定义按钮样式，实现圆角 -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" 
                                        Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DarkenConverter}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" 
                                        Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DarkenConverterPressed}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,8"/>
            <!-- 设置按钮自适应宽度 -->
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- 小按钮样式（用于更改路径按钮） - 已增大尺寸 -->
        <Style x:Key="SmallButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#4A90E2"/>
            <!-- 增大字体大小 -->
            <Setter Property="FontSize" Value="13"/>
            <!-- 增加内边距 -->
            <Setter Property="Padding" Value="6,3"/>
            <!-- 调整边距 -->
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- 增大宽度 -->
            <Setter Property="Width" Value="65"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" 
                                        Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DarkenConverter}}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 操作按钮样式（用于列表中的按钮） -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="1"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" 
                                        Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource DarkenConverter}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 路径文本样式 - 添加省略号处理 -->
        <Style x:Key="PathTextStyle" TargetType="TextBlock">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- 状态栏样式 -->
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- 状态文本样式 -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <!-- 视频项样式 -->
        <Style x:Key="VideoItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- 状态颜色 -->
        <SolidColorBrush x:Key="ParsedColor" Color="Green"/>
        <SolidColorBrush x:Key="WaitingColor" Color="Orange"/>
        <SolidColorBrush x:Key="DownloadingColor" Color="Orange"/>
        <SolidColorBrush x:Key="CompletedColor" Color="Green"/>
        <SolidColorBrush x:Key="FailedColor" Color="Red"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Border Grid.Row="0" Background="#FFF" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <Path Data="M12,3C7.03,3 3,7.03 3,12C3,16.97 7.03,21 12,21C16.97,21 21,16.97 21,12C21,7.03 16.97,3 12,3M12,19C8.13,19 5,15.87 5,12C5,8.13 8.13,5 12,5C15.87,5 19,8.13 19,12C19,15.87 15.87,19 12,19M11,16.5L16.5,11L15,9.5L11,13.5L9,11.5L7.5,13" 
                      Fill="#4A90E2" Stretch="Uniform" Width="24" Height="24"/>
                <TextBlock Text="Classin视频下载工具" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#4A90E2"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 控制面板 - 按钮自适应宽度 -->
            <Border Grid.Column="0" 
                    Background="#FFF" 
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="0">
                    <StackPanel>
                        <TextBlock Text="操作面板" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="5,5,0,15"/>

                        <!-- 所有按钮宽度自适应，左右边距5像素 -->
                        <Button x:Name="btnCopyCommand" 
                                Content="1. 复制请求命令到剪贴板"
                                Background="#4A90E2"
                                Click="CopyCommand_Click" 
                                Height="30"
                                Margin="5,0,5,0"/>

                        <Button x:Name="btnParse" 
                                Content="2. 解析剪贴板内容"
                                Background="#4A90E2"
                                Click="Parse_Click" 
                                Height="30"
                                Margin="5,8,5,0"/>

                        <TextBlock Text="解析状态" Margin="5,20,5,5"/>
                        <ProgressBar x:Name="progressBar" 
                                     Height="15" 
                                     Minimum="0" 
                                     Maximum="100"
                                     Value="0"
                                     Margin="5,0,5,0"/>

                        <TextBlock x:Name="txtStatus" 
                                   Text="准备就绪..." 
                                   Margin="5,10,5,0"
                                   Foreground="#666"/>

                        <Button x:Name="btnDownload" 
                                Content="3. 开始下载视频"
                                Background="#00B894"
                                Margin="5,20,5,0"
                                Click="Download_Click" 
                                Height="30"/>

                        <Button x:Name="btnOpenFolder" 
                                Content="4.打开下载目录"
                                Background="#6C5CE7"
                                Margin="5,10,5,0"
                                Click="OpenFolder_Click" 
                                Height="30"/>

                        <Button x:Name="btnCopyRawData" 
                                Content="复制原始数据到剪贴板"
                                Background="#FF6347"
                                Margin="5,10,5,0"
                                Click="CopyRawData_Click" 
                                Height="30"/>

                        <Button x:Name="btnClearLog" 
                                Content="清空日志"
                                Background="#FFC312"
                                Margin="5,10,5,0"
                                Click="ClearLog_Click" 
                                Height="30"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 分隔条 -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#D9D9D9"
                          Width="5"
                          ShowsPreview="False"/>

            <!-- 结果展示区 -->
            <Border Grid.Column="2" 
                    Background="#FFF" 
                    CornerRadius="8"
                    Padding="15"
                    Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="解析结果" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <ListView x:Name="lstResults" Grid.Row="1" ItemContainerStyle="{StaticResource VideoItemStyle}">
                        <ListView.View>
                            <GridView>
                                <!-- 修复：将 Index 改为 DisplayIndex -->
                                <GridViewColumn Header="序号" Width="40" DisplayMemberBinding="{Binding DisplayIndex}"/>
                                <GridViewColumn Header="课程名称" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" ToolTip="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="状态" Width="400">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="{Binding StatusColor}" Text="{Binding DisplayStatus}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="操作" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="复制URL" 
                                                        Width="60"
                                                        Style="{StaticResource ActionButtonStyle}"
                                                        Background="#4A90E2"
                                                        Foreground="White"
                                                        Click="CopyUrl_Click"
                                                        Tag="{Binding Url}"/>
                                                <Button Content="下载" 
                                                        Width="50"
                                                        Style="{StaticResource ActionButtonStyle}"
                                                        Background="#00B894"
                                                        Foreground="White"
                                                        Click="DownloadSingle_Click"
                                                        Tag="{Binding}"
                                                        Margin="5,0,0,0"/>
                                                <Button Content="删除" 
                                                        Width="50"
                                                        Style="{StaticResource ActionButtonStyle}"
                                                        Background="#FF6347"
                                                        Foreground="White"
                                                        Click="DeleteItem_Click"
                                                        Tag="{Binding}"
                                                        Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- 修复数字对齐问题 -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="已解析:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtParsedCount" 
                                   Text="0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="/" 
                                   VerticalAlignment="Center"
                                   Margin="5,0,5,0"/>
                        <TextBlock x:Name="txtTotalCount" 
                                   Text="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="视频" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 日志区域 - 添加下载输出选项卡 -->
        <Border Grid.Row="2" 
                Background="#FFF" 
                CornerRadius="8"
                Padding="10"
                Margin="0,10,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="日志与输出" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <!-- 添加选项卡 -->
                <TabControl Grid.Row="1" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Margin="0,5,0,0">
                    <TabItem Header="解析日志">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      x:Name="logScrollViewer"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch">
                            <TextBox x:Name="txtLog" 
                                     IsReadOnly="True" 
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Background="#F8F9FA"
                                     BorderThickness="0"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     HorizontalScrollBarVisibility="Disabled"
                                     VerticalScrollBarVisibility="Disabled"
                                     Padding="5"/>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="下载输出">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      x:Name="downloadOutputScrollViewer"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch">
                            <TextBox x:Name="txtDownloadOutput" 
                                     IsReadOnly="True" 
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     Background="#F8F9FA"
                                     BorderThickness="0"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     HorizontalScrollBarVisibility="Disabled"
                                     VerticalScrollBarVisibility="Disabled"
                                     Padding="5"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>

        <!-- 底部状态栏：添加更改路径按钮 -->
        <StatusBar Grid.Row="3" Background="#FFF" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="txtCurrentAction" Text="就绪" VerticalAlignment="Center"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="下载目录: " VerticalAlignment="Center" Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock x:Name="txtDownloadPath" 
                               Text="下载目录" 
                               VerticalAlignment="Center"
                               Style="{StaticResource PathTextStyle}"/>
                    <!-- 使用增大的按钮样式 -->
                    <Button x:Name="btnChangePath" 
                            Content="更改" 
                            Margin="5,0,0,0"
                            Click="ChangeDownloadPath_Click"
                            Style="{StaticResource SmallButtonStyle}" Width="50"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>